@model IEnumerable<AisMKIT.Models.UserView>
@{
    ViewData["Title"] = "Index";
}

<h2>Список пользователей</h2>
<a class="nav-link text-primary" asp-area="Identity" asp-page="/Account/Register">Добавить</a>
<br />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Код</td>
            <td>Пользователь</td>
            <td>Роли</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.UserName</td>
                <td>@role.Roles</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@role.Id">Детали</a> |
                    @*<a asp-action="Delete" asp-route-id="@role.Id">Удалить</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>