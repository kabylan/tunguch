@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h2>Список ролей</h2>
<a asp-action="Create">Добавить</a>
<br />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Код</td>
            <td>Наименование</td>
            <td>Пользователи</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td>
                <a asp-action="Edit" asp-route-id="@role.Id">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@role.Id">Детали</a> |
                @*<a asp-action="Delete" asp-route-id="@role.Id">Удалить</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>