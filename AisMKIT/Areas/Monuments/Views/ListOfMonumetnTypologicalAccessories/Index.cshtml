@model IEnumerable<AisMKIT.Models.ListOfMonumetnTypologicalAccessory>

@{
    ViewData["Title"] = "Типологическая принадлежность";
}

    <h2>Типологическая принадлежность</h2>
<br />
<p>
    <a asp-action="Create">Добавить новый</a>
</p>
<br />

<div class="overflow-auto">

    <table id="myTable" class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ListOfMonuments)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DictMonumentTypologicalType)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ListOfMonuments.NameRus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DictMonumentTypologicalType.NameRus)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>*@
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>