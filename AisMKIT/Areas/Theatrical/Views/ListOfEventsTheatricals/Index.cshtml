@model IEnumerable<AisMKIT.Models.ListOfEventsTheatrical>

@{
    ViewData["Title"] = "Репертуары";
}

<h2>Репертуары</h2>
<br />
<p>
    <a asp-action="Create">Добавить новый</a>
</p>
<br />

<div class="overflow-auto">

    <table id="myTable" class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ListOfTheatrical)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Month)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DayOfMonth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NameOfEvent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DictTheatricalHall)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ListOfTheatrical.NameRus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Month)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DayOfMonth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameOfEvent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DictTheatricalHall.NameRus)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>*@
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>